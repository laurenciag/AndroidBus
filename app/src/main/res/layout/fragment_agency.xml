<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentAgency"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.finalProjectAndroid.Fragment.AgencyFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="318dp">


                <ImageView
                    android:layout_width="434dp"
                    android:layout_height="250dp"
                    android:layout_gravity="top"
                    android:scaleType="centerInside"
                    android:src="@drawable/gedung" />

                <androidx.cardview.widget.CardView
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="5dp"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/roundedImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/agency" />
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/agName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto"
                    android:text="Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/agDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/roboto"
                    android:text="''Terkadang hidup memanglah terkadang''"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="90"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


                <LinearLayout

                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_weight="30"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus_agency" />

                </LinearLayout>
                <LinearLayout

                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_weight="30"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus_agency" />

                </LinearLayout>
                <LinearLayout

                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_weight="30"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus_agency" />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="90"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


                <LinearLayout

                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_weight="30"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus_agency" />

                </LinearLayout>
                <LinearLayout

                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_weight="30"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus_agency" />

                </LinearLayout>
                <LinearLayout

                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_weight="30"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus_agency" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</FrameLayout>