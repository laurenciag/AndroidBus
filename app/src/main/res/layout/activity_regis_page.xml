<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisPage">

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poly"
        android:text="Register"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />


    <TextView
        android:id="@+id/textDetails"
        android:layout_width="170dp"
        android:layout_height="14dp"
        android:autoSizeTextType="uniform"
        android:autoText="false"
        android:fontFamily="@font/poly"
        android:text="Please fill the details below"
        android:textSize="8sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome"
        app:layout_constraintVertical_bias="0.046" />



    <EditText
        android:id="@+id/inpFirstName"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/inpEmail"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.208" />

    <EditText
        android:id="@+id/inpAgencyName"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="Agency Name"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.447" />

    <EditText
        android:id="@+id/inpAgencyDetail"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="Agency Detail"
        android:inputType="textLongMessage|textPersonName"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.524" />

    <EditText
        android:id="@+id/inpLastName"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.13" />

    <EditText
        android:id="@+id/inpPassword"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.287" />

    <EditText
        android:id="@+id/inpCheckPass"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.364" />

    <EditText
        android:id="@+id/inpMobileNumber"
        android:layout_width="232dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/reem_kufi"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDetails"
        app:layout_constraintVertical_bias="0.602" />

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="233dp"
        android:layout_height="39dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#A9CCE8"
        android:fontFamily="@font/poly"
        android:onClick="registerUser"
        android:outlineProvider="paddedBounds"
        android:text="Register"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpMobileNumber"
        app:layout_constraintVertical_bias="0.0" />
    />
</androidx.constraintlayout.widget.ConstraintLayout>